@model Contact
@{
    ViewBag.Title = "Delete Contact";
}

<h2>Delete Contact</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ContactId" />

    <p>Do you really want to delete <strong>@Model.FirstName @Model.LastName</strong></p>


    <button type="submit" class="btn btn-dark">Yes</button>
    <a asp-controller="Contact" asp-action="Details"
       asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug"
       class="btn btn-dark">No</a>
</form>

