@model Contact
@{
    ViewData["Title"] = $"{ViewBag.Action} Contact";
}

<h2>@ViewBag.Action Contact</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ContactId"/>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="0">Select a category</option>
            @foreach (Category g in ViewBag.Categories)
            {
                <option value="@g.CategoryId">@g.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Organization">Organization</label>
        <input asp-for="Organization" class="form-control" />
    </div>

    <button type="submit" class="btn btn-dark">@ViewBag.Action</button>

    @if (ViewBag.Action == "Edit")
        {
        <a asp-controller="Contact" asp-action="Details"
           asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug" class="btn btn-dark">Cancel</a>
        }
    else
            {
                <a asp-controller="Home" asp-action="Index"
                class="btn btn-dark">Cancel</a>
            }
</form>
